<%= form_for @user, url: @user.persisted? ? :edit_user : :new_user do |form| %>

  <%= form.label "Time", class:"times-show" %>
    <%= select("", "team_id", Team.all.collect {|team| [ team.name_team,
      team.id ] }, id: :team, class: "selecao-times-show") %>

    <% if @user.persisted? %>
      <%= form.submit "Atualizar", class: "botao-atualizar-show" %>
    <% end %>

<% end %>
