<%= form_for @user, url: @user.persisted? ? :edit_team_user : :show_user do |form| %>

  <%= form.label "Time" %>
    <%= select("", "index_users_on_team_id", Team.all.collect {|team| [ team.name_team,
      team.id ] }, id: :team) %>

    <% if @user.persisted? %>
      <%= form.submit "Atualizar" %>
    <% end %>

<% end %>
