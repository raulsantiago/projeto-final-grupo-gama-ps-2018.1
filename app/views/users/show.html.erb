<p id="notice"><%= notice %></p>
<p>
  <strong>Nome:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>E-mail:</strong>
  <%= @user.email %>
</p>
<p>Cargos:</p>

<% @offices.each do |office| %>
