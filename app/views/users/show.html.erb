  <p><%= office.name_office %></p>
<% end %>
<% end %>

<p>Membro pertence ao time:</p>
<%= @user.team.name_team if @user.team_id %>

<%= render "team" %>


<button><%= link_to 'Cadastrar Time', new_team_path %></button>


